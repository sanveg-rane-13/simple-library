<h3>Manage Books</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Book</th>
            <th>Status</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @user_book_reqs.each do |req| %>
        <tr>
            <% @book = Book.find(req.book_id)%>
            <td><%=@book.title%></td>
            <td><%=req.get_status_message%></td>
            <td>
                <%= link_to 'Show Book', show_lib_book_contain_path(Contain.get_lib_book(req.library_id, req.book_id))%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Home', "/" %>