<h3>Bookmarks</h3>

<% if !(@bookmarks.empty?) %>
<table class="table">
    <thead>
        <tr>
            <th>Book</th>
            <th>Library</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @bookmarks.each do |bookmark| %>
        <tr>
            <td><%=Book.find(bookmark.book_id).title%></td>
            <td><%=Library.find(bookmark.library_id).name%></td>
            <%contain = Contain.get_lib_book(bookmark.library_id, bookmark.book_id) %>
            <td><%= link_to 'Show Book', show_lib_book_contain_path(contain)%></td>
        </tr>
        <% end %>
    </tbody>
</table>
<% else %>
<br>
<p>No Bookmarks</p>
<% end %>

<br>