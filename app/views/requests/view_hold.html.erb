<h3>Hold Requests</h3>

<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @hold_requests != nil %>
    <% @hold_requests.each do |req| %>
    <tr>
      <td><%=User.find(req.user_id).name%></td>
      <td><%=Book.find(req.book_id).title%></td>
    </tr>
    <% end %>
    <% else %>
    no hold requests
    <% end %>
  </tbody>
</table>

<br>