<h3>Hold Requests</h3>

<% if !(@hold_requests.empty?) %>
<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hold_requests.each do |req| %>
    <tr>
      <td><%=User.find(req.user_id).name%></td>
      <td><%=Book.find(req.book_id).title%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<br>
<p>No Hold requests</p>
<% end %>

<br>

<%= link_to 'Home', "/" %>