<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th>Subject</th>
      <th>Is special</th>
      <th>Summary</th>
      <th>Image front cover</th>
      <th>Edition</th>
      <th>Published</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.subject %></td>
        <td><%= book.is_special %></td>
        <td><%= book.summary %></td>
        <td><%= book.image_front_cover %></td>
        <td><%= book.edition %></td>
        <td><%= book.published %></td>
        <td><%= book.language %></td>

        <% if not @current_user.student? %>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

